{
	"name": "urley",
	"version": "1.2.0",
	"description": "A cross-platform library with a collection of handy utilites to work with URLs",
	"repository": "git://github.com/adenekan41/urley.git",
	"license": "MIT",
	"author": "Adenekan Wonderful <hellocodewonders@gmail.com> (https://codewonders.dev)",
	"main": "bundle-cjs/index.js",
	"module": "bundle-es/index.js",
	"jsnext:main": "bundle-es/index.js",
	"scripts": {
		"flush": "rm -rf bundle-cjs && rm -rf bundle-es",
		"build": "yarn flush && rollup -c",
		"format": "prettier --write \"**/*.{js,jsx,json,md}\""
	},
	"devDependencies": {
		"rollup": "^1.10.0",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-multi-input": "^1.0.3",
		"bundle-size": "^1.1.5",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-terser": "^5.2.0"
	},
	"bundlesize": [
		{
			"path": "bundle-cjs/**/*.js"
		},
		{
			"path": "bundle-es/**/*.js"
		}
	],
	"files": [
		"bundle-es",
		"bundle-cjs"
	],
	"keywords": [
		"web url",
		"javascript",
		"urley",
		"codewonders",
		"js",
		"utility",
		"functions",
		"utilities",
		"helpers",
		"helper functions",
		"URL"
	]
}
